<div class="container">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-1">
			<h1>Shopping Cart</h1>
		</div>
		<div class="col-xs-2">
			<%= link_to "Continue Shoping", items_path, class: "btn btn-default" %>
		</div>
	</div>


	

	<div class="row">
		<div class="col-xs-7 col-xs-offset-1">
			<div class="container">
				<div class="row text-center">
					<div class="col-xs-3"><h3>Product</h3></div>
					<div class="col-xs-3"><h3>Name</h3></div>
					<div class="col-xs-3"><h3>Price</h3></div>
					<div class="col-xs-3"><h3>Delete</h3></div>

				</div>
				<% sum = 0 %>
				<% @carts.each do |cart| %>
				<% sum = sum + cart.item.price.to_i %>
				<div class="row text-center">
					<div class="col-xs-3"><%= cl_image_tag(cart.item.photos.last.path, width: 100, heigth: 100) %></div>
					<div class="col-xs-3"><h4><%= cart.item.name %></h4></div>
					<div class="col-xs-3"><h4><%= cart.item.price %></h4></div>
					<div class="col-xs-3">
						<%= link_to new_cart_path(cart), method: :delete do %>
						<i class="fa fa-trash" aria-hidden="true"></i>
						<% end %>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<div class="col-xs-3" id="background">
			<h3>Order Sumary</h3>
			<p>Total price <%= sum %></p>
			<%= link_to "Checkout"%>
			<%= link_to "Empty Cart", cart_path , class: "btn btn-danger", method: :delete %>
		</div>
	</div>
</div>




