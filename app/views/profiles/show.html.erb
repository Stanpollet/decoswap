          <h4>Number of items</h4>
          <span class="text-muted"><%= @sum_of_items %></span>
        </div>

          <span class="text-muted">Positive</span>
        </div>
      </div>
    </div>

    <div class="container police">
      <div class="row">
        <% @user.bookings.each do |booking| %>
        <% if booking.item.status == "Rent" %>
        <div class="col-sm-9 col-sm-offset-3 col-md-4 col-md-offset-2 ">
          <%= render "card", booking: booking %>
          <%= booking.item.price %> $/month - <%= booking.item.status %>
          <%= link_to "Swap", profile_booking_path(booking), method: :delete, class: "btn btn-primary center text-right" %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
