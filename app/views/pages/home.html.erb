<!-- Start video hero -->
<div class="homepage-hero-module">
  <div class="video-container">
    <div class="filter"></div>
    <video autoplay loop class="fillWidth">
      <source src="../assets/Mp4/Dancing-Bulbs.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
<!--       <source src="../assets/Ogv/coverr-lamp.ogv" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser. -->
    </video>
    <div class="poster hidden">
      <img src="../assets/background.jpg" alt="">
    </div>

    <%= render 'shared/navbar' %>

    <div class="title-container">
      <div class="headlines">
        <h1 class="center">DecoSwap</h1>
        <h3 class="center">Change your interior decoration whenever you want</h3>

        <div class="container">
          <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
              <div id="search_container">

                <!-- Search Form -->

                <%= form_tag "/items", method: "get", class: "stylish-input-group" do %>
                <%= text_field_tag :query, nil, placeholder: "Type the furniture you are looking for...", class: "form-control" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- BANNERS -->
<p id="startchange"></p>
<div class="content-section-a">
    <div class="row">
      <div class="col-sm-offset-1 col-sm-5 col-xs-offset-1 col-xs-11">
        <div class="clearfix"></div>
        <h2 class="section-heading">Step one:<br>Choose your item</h2>
        <p class="lead">Choose between the best selection of your location.</p>
      </div>
      <div class="col-sm-6 col-xs-12">
        <%= image_tag("cactus.jpeg", class: "img-responsive") %>
      </div>
    </div>

  <!-- /.container -->

</div>
<!-- /.content-section-a -->

<div class="content-section-b">


    <div class="row">
      <div class="col-lg-6 col-sm-push-6  col-sm-6">
        <div class="clearfix"></div>
        <h2 class="section-heading">Step two:<br>Get delivered</h2>
        <p class="lead">We deliver your order in 48h.</p>
      </div>
      <div class="col-lg-6 col-sm-pull-6  col-sm-6">
        <%= image_tag("lamp.jpeg", class: "img-responsive") %>
      </div>
    </div>

  <!-- /.container -->

</div>
<!-- /.content-section-b -->

<div class="content-section-a">


    <div class="row">
      <div class="col-sm-offset-1 col-sm-5 col-xs-offset-1 col-xs-11">
        <div class="clearfix"></div>
        <h2 class="section-heading">Step three:<br>Swap</h2>
        <p class="lead">Your item doesn't fit anymore with your new painting color. It's okay. Just Swap it.</p>
      </div>
      <div class="col-sm-6 col-xs-12">
        <%= image_tag("loft.jpeg", class: "img-responsive") %>
      </div>
    </div>

  <!-- /.container -->

</div>
<!-- /.content-section-a -->

<a  name="contact"></a>
<div class="banner">

  <div class="container-fluid">

    <div class="row">
      <div class="col-lg-6">
        <h2>Connect to Start Swapping</h2>
      </div>
      <div class="col-lg-6">
        <ul class="list-inline banner-social-buttons">
          <li>
            <a href="https://twitter.com/SBootstrap" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
          </li>
          <li>
            <a href="https://github.com/IronSummitMedia/startbootstrap" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
          </li>
          <li>
            <a href="#" class="btn btn-default btn-lg"><i class="fa fa-pinterest fa-fw"></i> <span class="network-name">Pinterest</span></a>
          </li>
        </ul>
      </div>
    </div>

  </div>
  <!-- /.container -->

</div>


<%= javascript_include_tag 'application' %>

</body>
</html>
