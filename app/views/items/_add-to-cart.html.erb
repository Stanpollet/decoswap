    <%= f.submit 'Add to Cart', class: 'btn btn-prima' %>
  </div>
  <% end %>
  <% else %>
  <div class="btn-group cart">
    <%= link_to "Add to cart", "#signupModal", :class => "btn btn-primary register_button", "data-toggle" => "modal" %>
    <% end %>
  </div>
