<%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-danger" %>
<%= simple_form_for @cart do |f| %>
<div class="form-inputs">
  <%= f.input :id, as: :hidden, input_html: {value: @item.id} %>
</div>
<div class="form-actions">
  <%= f.submit 'Add to Cart', class: 'btn btn-primary' %>
</div>
<% end %>
<% elsif current_user.try(:professional?) %>
<div class="btn-group wishlist">
  <%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-danger" %>
  <% elsif current_user.try(:customer?) %>
  <%= simple_form_for @cart do |f| %>
  <div class="form-inputs">
    <%= f.input :id, as: :hidden, input_html: {value: @item.id} %>
  </div>
