<h1 class="text-center">All the items</h1>

<div class="container police">
 <div class="row">
  <%= simple_form_for :item, url:items_path, html: {method: :get}, data: {autosubmit: true} do |f| %>
  <%= f.input :category_item, collection: category_collection, as: :select, label: "Category", include_blank: "All items", input_html: {name: :category_item} %>
  <%= f.hidden_field :name, value: params["query"], name: :query %>

  <% end %>

</div>
</div>



<div class="container police">
 <div class="row">
  <% @items.each do |item| %>
  <% if item.status == "Free" || "Rent" %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <%= link_to item_path(item), class:"no-text-decoration" do %>
    <% if item.status == "Free" %>
    <%= render "card", item: item %>
    <% elsif item.status == "Rent" %>
    <%= render "card_oos", item: item %>
    <% end %>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>
</div>

<script>
  $(document).ready(function() {
    $("[data-autosubmit=true]").on("change", function() {
      return $(this).submit();
    });
  });
</script>
