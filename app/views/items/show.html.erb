<div class="container police">
 <div class="row">
 <br>

 <div class="col-xs-12 col-sm-6 col-md-6">
    <%= cl_image_tag @item.photo, width: 400 %>
 </div>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="card-category text-center">
      <h2><%= @item.name %></h2>
      <p><%= @item.category_item %></p>
      <p><%= @item.description %></p>
      <p><%= @item.price %> â‚¬/month </p>
      <br>
      <br>
      <br>


      <%= link_to "Book", new_item_booking_path(@item), class: "btn btn-primary center" %>

      <%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-primary center" %>
      <br>
      <br>
      <br>

      <%= render 'reviews/form', item: @item, review: @review %>

      <div id="reviews">
        <% if @item.reviews.blank? %>
          Be the first to leave a review for <%= @item.name %>
        <% else %>
          <% @item.reviews.each do |review| %>
             <%= render 'reviews/show', review: review %>
        <% end %>
       <% end %>
      </div>

    </div>
  </div>

</div>
</div>


