<!-- product page -->
<div class="container-fluid">
  <div class="content-wrapper">
    <div class="item-container">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div id="owl-product" class="owl-carousel">
              <% @item.photos.each do |photo| %>
              <div class="item">
               <%= cl_image_tag photo.path %>
             </div>
             <% end %>
           </div>
         </div>

         <div class="col-md-6">
          <div class="product-title"><h1><%= @item.name %></h1></div>
          <div class="product-desc"><h4><%= @item.category_item %></h4></div>
          <hr>
          <div class="product-price"><%= @item.price %> â‚¬/month </div>
          <div class="product-stock"><%= @item.status %></div>
          <hr>
        </div>
        <% if current_user.try(:customer?) %>
        <div class="btn-group cart">
              <!-- <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
                Add to cart
              </button> -->
              <%= simple_form_for @cart do |f| %>
              <div class="form-inputs">
                <%= f.input :id, as: :hidden, input_html: {value: @item.id} %>
              </div>
              <div class="form-actions">
                <%= f.submit 'Add to Cart' %>
              </div>
              <% end %>
            </div>
            <% end %>
            <div class="btn-group wishlist">
              <% if current_user.try(:professional?) %>
              <%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Nice one</h4>
          </div>
          <div class="modal-body">

            <h4> <%= @item.name %> has been added to your cart </h4>

          </div>
          <div class="modal-footer">
            <%= link_to "Continue Shopping", items_path, class: "btn btn-succes" %>
            <%= link_to "Checkout", cart_path, class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
    <!-- End of Modal -->


    <div class="container-fluid">
      <div class="col-md-12 product-info">
        <ul id="myTab" class="nav nav-tabs nav_tabs">

          <li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
          <li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
          <li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>

        </ul>
        <div id="myTabContent" class="tab-content">
          <div class="tab-pane fade in active" id="service-one">

            <section class="container product-info">
              <p><%= @item.description %></p>
            </section>

          </div>
          <div class="tab-pane fade" id="service-two">

            <section class="container product-info">
              <ul>
                <li><strong>Size:</strong> <%= @item.size %></li>
                <li><strong>Condition:</strong> <%= @item.condition %></li>
                <li><strong>Color:</strong> <%= @item.color %></li>
                <li><strong>Materials:</strong> <%= @item.materials %></li>
                <li><strong>Category:</strong> <%= @item.category_item %></li>
                <li><strong>Designer:</strong> <%= @item.designer %></li>
                <li><strong>Design Period:</strong> <%= @item.design_period %></li>
              </ul>
            </section>

          </div>
          <div class="tab-pane fade" id="service-three">
           <%= render 'reviews/form', item: @item, review: @review %>

           <div id="reviews product-info">
            <% if @item.reviews.blank? %>
            <p>Be the first to leave a review</p> for <%= @item.name %>
            <% else %>
            <% @item.reviews.each do |review| %>
            <%= render 'reviews/show', review: review %>
            <% end %>
            <% end %>
          </div>

        </div>
      </div>
      <hr>
    </div>
  </div>
</div>
</div>
<!-- end of product page -->



<script>
$(document).ready(function() {

  $("#owl-product").owlCarousel({
    autoPlay : false,
    stopOnHover : true,
    navigation:true,
    paginationSpeed : 1000,
    goToFirstSpeed : 2000,
    singleItem : true,
    autoHeight : true,
    transitionStyle:"fade"
  });

});
</script>

