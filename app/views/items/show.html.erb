<div class="container police">
 <div class="row">
   <br>

   <div class="col-xs-12 col-sm-6 col-md-6">
    <% @item.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6">
    <div class="card-category text-center">
      <h2><%= @item.name %></h2>
      <p><%= @item.category_item %></p>
      <p><%= @item.description %></p>
      <p><%= @item.price %> â‚¬/month </p>
      <p><%= @item.status %></p>

      <br>
      <br>
      <br>


      <%= simple_form_for @booking , url: item_bookings_path(@item) do |f| %>
      <div class="form-inputs">
        <%= f.input :end_date, as: :string, input_html: { class: "datepicker"} %>
      </div>

      <div class="form-actions btn btn-primary center">
        <%= f.button :submit %>
      </div>
      <% end %>
      
      <br>
      <br>
      <br>


      <%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-primary center" %>


    </div>
  </div>

</div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>


