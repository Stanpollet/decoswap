
<!-- product page -->
<div class="container-fluid">
  <div class="content-wrapper">
    <div class="item-container">
      <div class="container">

        <div class="col-md-6">
          <div class="product col-md-9 service-image-left">

            <%= cl_image_tag @item.photos.first.path, :class => ("service-image-left") %>
          </div>

          <div class="container service1-items col-sm-2 col-md-3 pull-right">
            <center>
              <% @item.photos.each_with_index do |photo, index| %>
              <% if index > 0 %>
              <a id="item-1" class="service1-item">
               <%= cl_image_tag photo.path, :class => ("service1-items") %>
             </a>
             <% end %>
             <% end %>
           </center>
         </div>
       </div>

       <div class="col-md-6">
        <div class="product-title"><h1><%= @item.name %></h1></div>
        <div class="product-desc"><%= @item.size %></div>
        <hr>
        <div class="product-price"><%= @item.price %> â‚¬/month </div>
        <div class="product-stock"><%= @item.status %></div>
        <hr>
        <div class="btn-group cart">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
            Add to cart
          </button>
        </div>
        <div class="btn-group wishlist">
          <%= link_to "Edit", edit_dashboard_item_path(@item), class: "btn btn-danger" %>
        </div>
      </div>

    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Make a reservation</h4>
        </div>
        <div class="modal-body">
          <%= simple_form_for @booking , url: item_bookings_path(@item) do |f| %>
          <div class="form-inputs">
            <%= f.input :end_date, as: :string, input_html: { class: "datepicker"} %>
          </div>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <div class="form-actions btn btn-primary center">
            <%= f.button :submit %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Modal -->


  <div class="container-fluid">
    <div class="col-md-12 product-info">
      <ul id="myTab" class="nav nav-tabs nav_tabs">

        <li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
        <li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
        <li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>

      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="service-one">

          <section class="container product-info">
            <%= @item.description %>
          </section>

        </div>
        <div class="tab-pane fade" id="service-two">

          <section class="container">
          <li>Size: <%= @item.size %></li>
          <li>Condition: <%= @item.condition %></li>
          <li>Color: <%= @item.color %></li>
          <li>Materials: <%= @item.materials %></li>
          <li>Category: <%= @item.category_item %></li>
          <li>Designer: <%= @item.designer %></li>

          </section>

        </div>
        <div class="tab-pane fade" id="service-three">
 <%= render 'reviews/form', item: @item, review: @review %>

      <div id="reviews">
        <% if @item.reviews.blank? %>
        Be the first to leave a review for <%= @item.name %>
        <% else %>
        <% @item.reviews.each do |review| %>
        <%= render 'reviews/show', review: review %>
        <% end %>
        <% end %>
      </div>

        </div>
      </div>
      <hr>
    </div>
  </div>
</div>
</div>
<!-- end of product page -->

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
      format: "dd/mm/yyyy",
      autoclose: true
    });
  });
</script>


