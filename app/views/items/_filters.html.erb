<div class="container police">
 <div class="row">
  <%= simple_form_for :item, url:items_path, html: {method: :get, class: "form-inline text-center"}, data: {autosubmit: true} do |f| %>
  <%= f.input :category_item, collection: category_collection, as: :select, label: false, include_blank: "All items", input_html: {name: :category_item}, selected: params[:category_item] %>
  <%= f.hidden_field :name, value: params["query"], name: :query %>

  <%= f.input :price_cents, collection: price_collection, as: :select, label: false, include_blank: "All prices", input_html: {name: :price_cents}, selected: params[:price_cents] %>

 <%= f.input :color, collection: colors_collection, as: :select, label: false, include_blank: "All colors", input_html: {name: :color}, selected: params[:color] %>

  <% end %>
</div>
</div>
